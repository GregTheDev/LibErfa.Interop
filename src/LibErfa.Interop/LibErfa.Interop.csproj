<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1;net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<Title>LibErfa.Interop</Title>
		<Authors>Greg Nagel</Authors>
		<PackageTags>liberfa;AstroNET;sofa;erfa</PackageTags>
		<Description>Unoffical .NET wrapper for the liberfa library (https://github.com/liberfa/erfa). Limited functions are available initially. To request more simply log an issue.</Description>
		<Version>1.0.1</Version>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<PackageProjectUrl>https://github.com/GregTheDev/LibErfa.Interop</PackageProjectUrl>
		<RepositoryUrl>https://github.com/GregTheDev/LibErfa.Interop</RepositoryUrl>
		<PackageReleaseNotes>Added support for .NET 9.</PackageReleaseNotes>
		<Copyright>Copyright (c) Gregory Nagel 2024.</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<AnalysisLevel>latest-recommended</AnalysisLevel>
	</PropertyGroup>
	
	<!-- https://learn.microsoft.com/en-us/nuget/create-packages/native-files-in-net-packages -->
	<!-- These files were generated by the pipeline build script and downloaded and copied here. They're
		 only copied to the outout directory here for the unit tests. -->
	<ItemGroup>
		<None Include="../../cross-compile/liberfa.so" Pack="true" PackagePath="runtimes/linux/native/">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Include="../../cross-compile/liberfa.dylib" Pack="true" PackagePath="runtimes/osx/native/">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Include="../../cross-compile/liberfa.dll" Pack="true" PackagePath="runtimes/win/native/">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
